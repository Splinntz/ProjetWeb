                </small>
            </div>
            <div class="form-group">
                <h4>{{ form_label(form.age,'Age',{'label_attr':{'class':'text-dark'}}) }}</h4>
                {{ form_widget(form.age,{'attr':{'class':'form-control','placeholder':'Entrez votre age'}}) }}
            </div>
            <div class="row justify-content-sm-center">
                {{ form_row(form.submit,{'attr':{'class':'btn btn-primary mx-auto'}}) }}
            </div>
            {{ form_end(form) }}
