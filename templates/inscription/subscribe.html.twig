{% extends 'base.html.twig' %}

{% block title %}EasyAd - Inscription{% endblock %}

{% block body %}
    <div class="row justify-content-sm-center my-5 ">
        <div class="border border-primary p-2 rounded bg-light p-5">
            {{ form_start(form) }}
            <div class="form-group">
                <h4>{{ form_label(form.login,'Login',{'label_attr':{'class':'text-dark'}}) }}</h4>
                {{ form_widget(form.login,{'attr':{'class':'form-control','placeholder':'Entrez votre Login'}}) }}
            </div>
            <div class="form-group">
                <h4>{{ form_label(form.password,'Password',{'label_attr':{'class':'text-dark'}}) }}</h4>
                {{ form_widget(form.password,{'attr':{'class':'form-control','placeholder':'Entrez votre Mot de Passe','passwordType':'true'}}) }}
