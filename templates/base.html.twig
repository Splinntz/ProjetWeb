<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, height=device-height">
    <title>{% block title %}EASYADS{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
              integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
              crossorigin="anonymous">
    {% endblock %}
</head>
<body class="h-100">
{% block header %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Easy Ads</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        {% if is_granted('ROLE_ADMIN') %}
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav mr-auto">
                    <a class="nav-item active nav-link" href="/">Accueil</a>
                    <a class="btn btn-primary text-light m-1" href="/admin/gestionDiscipline" role="button">Gestion discipline</a>
                </div>
                <form class="form-inline">
                    <a class="nav-item active nav-link" href="/">Connecté en tant que : {{ app.user.login }}</a>
                    <a class="btn btn-warning text-dark m-1" href="{{ path('app_logout')}}" role="button">Deconnexion</a>
                </form> 
            </div>
        {% else %}
            {% if is_granted('ROLE_USER') %}
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav mr-auto">
                        <a class="nav-item active nav-link" href="/">Accueil</a>
                        <a class="nav-item active nav-link" href="/myAdvert">Mes Annonces</a>
                        <a class="nav-item active nav-link" href="/userSpace">Mon espace perso</a>
                        <a class="nav-item active nav-link" href="/myTchats">Mes tchats</a>
                </div>

                <form class="form-inline">
                
                    <a class="btn btn-primary text-light m-1" href="/ajoutannonce" role="button">Création annonces</a>
                    <a class="nav-item active nav-link" href="/">Connecté en tant que : {{ app.user.login }}</a>
                    <a class="btn btn-warning text-dark m-1" href="{{ path('app_logout')}}" role="button">Deconnexion</a>
                </form> 
            </div>
            {% else %}
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav mr-auto">
                        <a class="nav-item active nav-link" href="/">Accueil</a>
                </div>

                <form class="form-inline">
                    <a class="btn btn-primary text-light m-1" href="/subscribe" role="button">Inscription</a>
                    <a class="btn btn-warning text-dark m-1" href="/app_login" role="button">Connexion</a>
                </form>
            </div>
            {% endif %}
        {% endif %}
    </nav>{% endblock %}
{% block body %}
    {% if  app.user is not null %}
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4"> Ici toutes les annonces !</h1>
                <p class="lead">En développement !</p>
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https:////cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
